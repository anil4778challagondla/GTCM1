<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Activity.EventDetails">
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/applogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lightbackground"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/eventtitleid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:textColor="@color/logocolor"
                    android:text="Christmas pray"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gilroybold"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="15dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/eventimageid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description :"
                        android:textColor="@color/logocolor"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/eventmapsdescriptiontvid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="abcdef"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When :"
                        android:textColor="@color/logocolor"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/eventwhentv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcdef"


                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Person :"
                        android:textColor="@color/logocolor"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/eventContactnametv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcdef"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Mobile :"
                        android:textColor="@color/logocolor"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/eventContactmobiletv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcdef"


                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Email :"
                        android:textColor="@color/logocolor"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/eventContactemailtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcdef"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organisation :"
                        android:textColor="@color/logocolor"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/eventContactorganisationtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcdef"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Location :"
                        android:textColor="@color/logocolor"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/eventContactlocationtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcdef"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="75dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/eventssociallistid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>



            </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/sponsor"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </HorizontalScrollView>

</LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>